<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Artists<p class="special"><%= link_to '<i class="fa fa-plus fa-fw"></i>Add Artist'.html_safe, new_artist_path %></p></h1>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="col-sm-10 col-centered">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Genre</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @artists.each do |artist| %>
            <tr>
              <td><%= artist.name %></td>
              <td><%= artist.genre.try(:name) %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-file-text fa-fw"></i>'.html_safe, artist %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-spin fa-cog fa-fw"></i>'.html_safe, edit_artist_path(artist) %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-trash fa-fw"></i>'.html_safe, artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
