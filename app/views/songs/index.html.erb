<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Songs<p class="special"><%= link_to '<i class="fa fa-plus fa-fw"></i>Add Song'.html_safe, new_song_path %></p></h1>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="col-sm-10 col-centered">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Artist</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @songs.each do |song| %>
            <tr>
              <td><%= song.name %></td>
              <td><%= song.artist.try(:name) %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-file-text fa-fw"></i>'.html_safe, song %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-spin fa-cog fa-fw"></i>'.html_safe, edit_song_path(song) %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-trash fa-fw"></i>'.html_safe, song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
