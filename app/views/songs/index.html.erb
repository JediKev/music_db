<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<div class="row">
  <div class="col-lg-10 col-centered">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Artist</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td><%= song.name %></td>
            <td><%= song.artist.try(:name) %></td>
            <td><%= link_to 'Show', song %></td>
            <td><%= link_to 'Edit', edit_song_path(song) %></td>
            <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

