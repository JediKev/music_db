<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Genres<p class="special"><%= link_to '<i class="fa fa-plus fa-fw"></i>Add Genre'.html_safe, new_genre_path %></p></h1>
</div>

<div class="container">
  <div class="row-fluid">
    <div class="col-sm-10 col-centered">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-file-text fa-fw"></i>'.html_safe, genre %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-spin fa-cog fa-fw"></i>'.html_safe, edit_genre_path(genre) %></td>
              <td class="text-right"><%= link_to '<i class="fa fa-trash fa-fw"></i>'.html_safe, genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
